---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <ViewTransitions />
  </head>
  <body>
    <main class="w-full flex flex-col items-center py-8 gap-4">
      <Header />
      <slot />
      <Footer />
    </main>
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css?family=Inter:thin,extrelight,light,regular,regularitalic,medium,mediumitalic,semibold,semibolditalic,bold,bolditalic');

  html {
    background-image: url('/images/background.jpg');
    background-size: cover;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    background-attachment: fixed;
  }
  body {
    overflow-x: hidden;
    min-height: 100vh;
    max-width: 100vw;
    backdrop-filter: blur(2px);
  }

  body[style] {
    margin-right: 0px !important;
    overflow-y: scroll !important;
  }
</style>